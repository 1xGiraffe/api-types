{
  "name": "@galacticcouncil/api-types",
  "version": "0.0.1-rc0",
  "private": false,
  "description": "HydraDX & Basilisk types augment for @polkadot/api",
  "author": "Pavol Noha <pavol.noha@gmail.com>",
  "scripts": {
    "generate": "npm run load:meta && npm run generate:defs && npm run generate:meta",
    "postgenerate": "npm run pretty",
    "load:meta": "npm run load:meta:basilisk && npm run load:meta:hydradx",
    "load:meta:basilisk": "node --experimental-specifier-resolution=node --loader ts-node/esm ./scripts/metadata.mjs --ws wss://rpc.basilisk.cloud --chain basilisk",
    "load:meta:hydradx": "node --experimental-specifier-resolution=node --loader ts-node/esm ./scripts/metadata.mjs --ws wss://rpc.hydradx.cloud --chain hydradx",
    "generate:defs": "npm run generate:defs:basilisk && npm run generate:defs:hydradx",
    "generate:defs:basilisk": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package @galacticcouncil/api-augment/basilisk/interfaces --input ./src/basilisk/interfaces --endpoint ./src/basilisk/metadata.json",
    "generate:defs:hydradx": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package @galacticcouncil/api-augment/hydradx/interfaces --input ./src/hydradx/interfaces --endpoint  ./src/hydradx/metadata.json",
    "generate:meta": "npm run generate:meta:basilisk && npm run generate:meta:hydradx",
    "generate:meta:basilisk": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --endpoint ./src/basilisk/metadata.json --package @galacticcouncil/api-augment/basilisk/interfaces --output ./src/basilisk/interfaces",
    "generate:meta:hydradx": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --endpoint ./src/hydradx/metadata.json --package @galacticcouncil/api-augment/hydradx/interfaces --output ./src/hydradx/interfaces",
    "prebuild": "rimraf build",
    "build": "tsc -b --verbose",
    "postbuild": "node --experimental-specifier-resolution=node --loader ts-node/esm ./scripts/postbuild.mjs",
    "publish": "cd build && npm publish",
    "pckg:release": "npm run generate && npm run build",
    "pckg:publish": "npm publish",
    "pretty": "prettier --write --ignore-unknown --plugin prettier-plugin-jsdoc 'src/**/*' 'scripts/**/*'"
  },
  "exports": {
    "./hydradx": {
      "types": "./hydradx/index.d.ts",
      "require": "./hydradx/index.cjs",
      "default": "./hydradx/index.js"
    },
    "./basilisk": {
      "types": "./basilisk/index.d.ts",
      "require": "./basilisk/index.cjs",
      "default": "./basilisk/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "hydradx": [
        "hydradx/index.d.ts"
      ],
      "basilisk": [
        "basilisk/index.d.ts"
      ]
    }
  },
  "keywords": [
    "hydradx",
    "basilisk",
    "types",
    "polkadot",
    "api"
  ],
  "devDependencies": {
    "@polkadot/api": "^9.14.2",
    "@polkadot/typegen": "^9.14.2",
    "prettier": "^2.7.1",
    "prettier-plugin-jsdoc": "^0.3.38",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "overrides": {
    "@polkadot/api": "^9.14.2",
    "@polkadot/api-augment": "9.14.2",
    "@polkadot/api-derive": "9.14.2",
    "@polkadot/api-base": "9.14.2",
    "@polkadot/rpc-augment": "9.14.2",
    "@polkadot/rpc-core": "9.14.2",
    "@polkadot/rpc-provider": "9.14.2",
    "@polkadot/types": "9.14.2",
    "@polkadot/types-augment": "9.14.2",
    "@polkadot/types-codec": "9.14.2",
    "@polkadot/types-create": "9.14.2",
    "@polkadot/types-known": "9.14.2"
  }
}
